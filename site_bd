create database site;
use site;
show tables;

create table musicas(
 id int primary key auto_increment,
 nome varchar(45),
 id_artista int ,
 foreign key(id_artista) references artistas(id)
 );
 
create table artistas(
 id int primary key auto_increment,
 nome varchar(45)
);
 
 insert into artistas(nome)
 values('chinara');
 
 select* from artistas;
 select * from musicas;

 insert into musicas(nome)
 values ('nome');

--------------------------------------------------

import mysql.connector

mydb = mysql.connector.connect(
     host= "10.1.1.109",
     user= "admin",
     password= "admin",
     database= "site"
)
mycursor = mydb.cursor()


def cadastrar():
    print('cadastrando')
    nome = input('Digite o nome')

    sql = "INSERT INTO artistas (nome) VALUES (%s)"
    valores = (nome, )
    mycursor.execute(sql, valores)
    mydb.commit()

def listar():
    print('listando')

    mycursor.execute("SELECT * FROM artistas")

    myresult = mycursor.fetchall()
    print("id nome")
    for id, nome in myresult:
        print(f"{id} {nome}")

def alterar():
    listar()
    id = input('o id do artista que deseja alterar' )
    novo_nome = input('novo nome' )
    valores = (novo_nome, id, )
    sql = "UPDATE artistas SET nome = %s WHERE id = %s"

    mycursor.execute(sql, valores,)

    mydb.commit()

    print(mycursor.rowcount, "record(s) affected")

def delete():
    listar()
    id = input('o id do artista que deseja deletar')
    valores = (id,)
    sql = "DELETE FROM artistas WHERE id = %s"

    mycursor.execute(sql, valores,)

    mydb.commit()

    print(mycursor.rowcount, "record(s) deleted")

def juntar_tabelas():

    sql= "SELECT \
        artistas.nome AS artista, \
        musicas.nome AS musica \
        FROM artistas \
        INNER JOIN musicas ON musicas.id_artista = artistas.id"

    mycursor.execute(sql)

    myresult = mycursor.fetchall()

    print("id nome")
    for id, nome in myresult:
        print(f"{id} {nome}")

    for x in myresult:
        print(x)

while True:
    print('1.cadastrar artista')
    print('2.listar artista')
    print('3.atualizar')
    print('4.deletar')
    print('5.juntar_tabelas')
    print('6.sair')

    opcao=int(input('escolha a opcao '))
    if opcao == 1:
        cadastrar()
    elif opcao == 2:
        listar()
    elif opcao == 3:
        alterar()
    elif opcao == 4:
        delete()   
    elif opcao == 5:
        juntar_tabelas()
    elif opcao == 6:
        break    
    else: 
        print('opcao invalida')
